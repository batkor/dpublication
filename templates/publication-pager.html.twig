<nav class="pager publication_pager" role="navigation" aria-labelledby="{{ id }}">
  <h4 id="{{ id }}" class="visually-hidden">{{ 'Pagination'|t }}</h4>
  <ul class="pager__items">
    {% if previous %}
      <li class="pager__item pager__item--previous">
        <a href="{{ previous }}" title="{{ 'Go to previous page'|t }}" rel="prev">
          <span>{{ 'Previous page'|t }}</span>
        </a>
      </li>
    {% endif %}
    {% if next %}
      <li class="pager__item pager__item--next">
        <a href="{{ next }}" title="{{ 'Go to next page'|t }}" rel="next">
          <span>{{ 'Next page'|t }}</span>
        </a>
      </li>
    {% endif %}
  </ul>
</nav>
